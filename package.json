{
  "name": "pong-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n 'SERVER,CLIENT' -c 'cyan,green' \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "clean": "bash scripts/cleanup-dev.sh",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "react-toastify": "^11.0.5"
  }
}
